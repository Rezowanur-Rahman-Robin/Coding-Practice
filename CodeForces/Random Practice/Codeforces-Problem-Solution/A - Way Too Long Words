#include<iostream>
using namespace std;
int main()
{
    int n;
    string word;
    cin>>n;
    while(n--)
    {
        cin>>word;
        int Size=word.size();
        if(Size>10)
        {
            cout<<word[0]<<Size-2<<word[Size-1];
        }
        else
        {
            cout<<word;
        }
        cout<<endl;
    }
    return 0;
}
